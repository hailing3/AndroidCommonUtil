<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_follow_authors_avatar"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"
        android:src="@drawable/ic_more_cp" />

    <ImageView
        android:id="@+id/iv_follow_circle"
        android:layout_width="@dimen/dp_15.33"
        android:visibility="invisible"
        android:layout_height="@dimen/dp_15.33"
        android:layout_alignBottom="@id/iv_follow_authors_avatar"
        android:layout_alignRight="@id/iv_follow_authors_avatar"
        android:src="@drawable/ic_head_circle" />

</RelativeLayout>