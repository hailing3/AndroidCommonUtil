<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <com.mtx.androidcommonutil.ui.view.ShadeImageView
            android:id="@+id/iv_test"
            android:src="@drawable/selector_detail_back"
            android:background="@drawable/selector_detail_back_bg"
            android:layout_width="@dimen/test_height"
            android:layout_height="@dimen/test_height"/>

    <SeekBar
            android:id="@+id/seekBar"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

</LinearLayout>

