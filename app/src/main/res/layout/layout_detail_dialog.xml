<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
            android:layout_width="wrap_content"
            android:text="111111111111111111111111"
            android:textSize="13sp"
            android:layout_marginTop="27.7dp"
            android:layout_marginLeft="27.3dp"
            android:textColor="#99000000"
            android:layout_height="wrap_content"/>

    <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_marginTop="10.9dp"
            android:scrollbars="none"
            android:layout_height="wrap_content">

    </HorizontalScrollView>

    <View
            android:layout_width="match_parent"
            android:background="#dddddd"
            android:layout_height="1px"
            android:layout_marginTop="18.9dp"
            android:layout_marginBottom="18.9dp"/>

    <HorizontalScrollView
            android:layout_width="match_parent"
            android:scrollbars="none"
            android:layout_height="wrap_content">
    </HorizontalScrollView>

    <View
            android:layout_width="match_parent"
            android:background="#dddddd"
            android:layout_height="1px"
            android:layout_marginTop="27.27dp"/>

    <TextView
            android:layout_width="match_parent"
            android:id="@+id/btn_detail_dialog_cancel"
            android:text="222222222222222"
            android:gravity="center"
            android:textSize="15.3sp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:textColor="#A5000000"
            android:layout_height="wrap_content"/>

</LinearLayout>